---
import Layout from "@/layouts/Layout.astro";


import { Icon } from "astro-icon/components";
---

<Layout title="Bedford Barber Co">
	<div class="text-gray-200 w-40 ml-auto mr-3 mt-5">
		<span class="whitespace-nowrap">
			Next Booking Slot 
		</span>
		<h2 class="flex flex-col">
			<span class="text-6xl">10:30AM</span>
			<span>SAT 23 Aug 2025</span>
		</h2>
		<img src="/barber.svg" class="h-32 -mt-10 rotate-90 mx-auto">
	</div>
	<Icon class="h-96 w-96 m-auto" name="logo"></Icon>
</Layout>