---
interface Props {
	title: string;
}
// ./src/layouts/Layout.astro
import { VisualEditing } from "@sanity/astro/visual-editing";
import WhatsAppWidget from "../components/WhatsAppWidget.astro";
import MenuBar from '../components/menubar';
import FooterMenu from "../components/footer"
import "../styles/global.css";
const visualEditingEnabled = import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED == "true";

const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="m-0 w-full p-0">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <!-- <link rel="stylesheet" href="https://use.typekit.net/chf2fke.css"> -->
		<link rel="sitemap" href="/sitemap-index.xml" />
		<script type="application/ld+json">
			{
			  "@context": "https://schema.org",
				"@type": "LocalBusiness",
			  "url": "https://bedford-barbers.vercel.app",
			  "logo": "https://bedford-barbers.vercel.app/logo.png",
			  "name": "Bedford Barber Co",
				"name": "BEDFORD BARBER co",
			  "description": "Bedford Barber Co",
			  "email": "bbc@dev-operations.info",
			  "telephone": "+44 07429 153339",
			  "address": {
				"@type": "PostalAddress",
				"streetAddress": "20C Miller Rd",
				"addressLocality": "Bedford",
				"addressCountry": "UK",
				"addressRegion": "Bedfordshire",
				"postalCode": "MK42 9NZ"
			  },
			  "priceRange": "$$",
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "10:00",
          "closes": "20:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Sunday",
          "opens": "10:00",
          "closes": "16:00"
        }
      ]
			}
			</script>
	</head>
    <body class="bg-black px-5 lg:px-20 pb-10 text-2xl lg:text-3xl overflow-x-hidden text-gray-200 w-full">
<MenuBar  client:load></MenuBar>
        <slot />
        <VisualEditing enabled={visualEditingEnabled} />
        <script>
            import { SetupAnimations } from "@/js/animation";

            SetupAnimations();
        </script>
